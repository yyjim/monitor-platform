<div id="register-user" style="float:left">
	<fieldset id="user-new">
		<legend>Signup</legend>
	<div id="user-new-errors"></div>
	<% form_for (@user) ,new_user_path do |f| %>
		<ol>
			<li>
				<%= f.label :login, 'Login' %>: 
				<%= f.text_field :login ,{:size=>30}%>
			</li>
			<li>
				<%= f.label :email, 'Email' %>: 
				<%= f.text_field :email ,{:size=>30}%>
			</li>
			<li>
				<%= f.label :password, 'Password' %>: 
				<%= f.password_field :password ,{:size=>30}%>
			</li>
			<li>
				<%= f.label :password_confirmation, 'Password_confirmation' %>: 
				<%= f.password_field :password_confirmation ,{:size=>30}%>
			</li>
		</ol>
		<p>
			<button id="signup" type="submit" value="submit">Sign up!</button>
		</p>
	<% end %>
	</fieldset>
</div>